pipeline{
    agent any
    environment {
        root = "/usr/local/go/bin/go"
        branch = "master"
        scmUrl = "https://github.com/yogocik/sample-jenkins.git"
    }
    stages{
        stage("Go version"){
            steps{
                sh "${root} version"
            }
        }
        stage("Git Clone"){
            steps{
                git branch: "${branch}", url:"${scmUrl}"
            }
        }
        stage("Go Test"){
            steps{
                sh "${root} test ./... -cover"
            }
        }
        stage("Go Build"){
            steps{
                sh "${root} build ./..."
            }
        }
        stage("Deploy"){
            steps{
                echo "DEPLOY SUCCESS"
            }
        }
    }
}
